    <div class="box">
      <h2 style="text-align: center">Razorpay</h2>
      <button type="button" style="margin-left: 48%" id="rzp-button1">
        Pay
      </button>
    </div>

    <script>
      axios.post("/order").then((info) => {
        var options = {
          key: "KEY", // Enter the Key ID generated from the Dashboard
          currency: "INR",
          name: "Acme Corp",
          description: "Test Transaction",
          order_id: info.data.id, //This is a sample Order ID. Pass the `id` obtained in the previous ste
          callback_url: "/is-order-complete",
          theme: {
            color: "#3399cc",
          },
        };

        var rzp1 = new Razorpay(options);
        document.getElementById("rzp-button1").onclick = function (e) {
          rzp1.open();
          e.preventDefault();
        };
      });
    </script>
